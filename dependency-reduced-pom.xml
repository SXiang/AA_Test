<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ACLQA</groupId>
  <artifactId>AX_TestAutomation</artifactId>
  <name>AX Test Automation - Selenium</name>
  <version>10.0-SNAPSHOT</version>
  <issueManagement>
    <system>JIRA</system>
    <url>https://aclgrc.atlassian.net/</url>
  </issueManagement>
  <ciManagement>
    <system>Jenkins</system>
    <url>http://biollante02:8080/view/TestUtilities/</url>
  </ciManagement>
  <organization>
    <name>ACLQA Automation</name>
    <url>https://aclgrc.atlassian.net/wiki/display/ACD/Analytics+Continuous+Delivery</url>
  </organization>
  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.java</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>deploy</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${testDeployServerDir}\${project.artifactId}</outputDirectory>
              <resources>
                <resource>
                  <directory>${testDeployLocalDir}</directory>
                  <filtering>false</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <includeSources>true</includeSources>
          <outputDirectory>${project.basedir}/output/deployment</outputDirectory>
          <shadeSourcesContent>true</shadeSourcesContent>
          <artifactSet>
            <excludes>
              <exclude>*:maven-core</exclude>
              <exclude>ACLQA:TAFDependencies</exclude>
            </excludes>
          </artifactSet>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <includes>
                <include>**/*.java</include>
                <include>**/*.class</include>
              </includes>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
          <transformers>
            <transformer />
            <transformer>
              <addHeader>false</addHeader>
            </transformer>
            <transformer />
            <transformer />
            <transformer />
            <transformer>
              <resource>META-INF/spring.handlers</resource>
            </transformer>
            <transformer>
              <resource>META-INF/spring.schemas</resource>
            </transformer>
            <transformer>
              <resource>META-INF/magic.xml</resource>
            </transformer>
            <transformer>
              <resource>.txt</resource>
            </transformer>
            <transformer>
              <resource>META-INF/README</resource>
              <file>README.txt</file>
            </transformer>
            <transformer>
              <manifestEntries>
                <Main-Class>${app.main.class}</Main-Class>
                <X-Compile-Source-JDK>${maven.compile.source}</X-Compile-Source-JDK>
                <X-Compile-Target-JDK>${maven.compile.target}</X-Compile-Target-JDK>
              </manifestEntries>
            </transformer>
          </transformers>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.10</version>
        <executions>
          <execution>
            <id>default-test</id>
            <phase>test</phase>
            <goals>
              <goal>test</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <skipTests>true</skipTests>
          <exclude />
          <parallel>classes</parallel>
          <threadCount>10</threadCount>
          <groups />
          <properties>
            <property />
          </properties>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>http://repo.maven.apache.org/maven2</url>
    </repository>
    <repository>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots />
      <id>Nexus</id>
      <name>Nexus Public Repository</name>
      <url>${aclqaNexusUrl}/groups/public</url>
    </repository>
    <repository>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots />
      <id>Nexus-Snapshots</id>
      <name>Nexus Public Snapshots</name>
      <url>${aclqaNexusUrl}/groups/public-snapshots</url>
    </repository>
    <repository>
      <releases>
        <updatePolicy>always</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>Releases</id>
      <name>ACLQA Automation Repository</name>
      <url>${aclqaNexusUrl}/repositories/releases</url>
    </repository>
    <repository>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
      </snapshots>
      <id>Snapshots</id>
      <name>ACLQA Automation Snapshots</name>
      <url>${aclqaNexusUrl}/repositories/snapshots</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>http://repo.maven.apache.org/maven2</url>
    </pluginRepository>
    <pluginRepository>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>Nexus</id>
      <name>Nexus Public Repository</name>
      <url>${aclqaNexusUrl}/groups/public</url>
    </pluginRepository>
  </pluginRepositories>
  <dependencies>
    <dependency>
      <groupId>ACLQA</groupId>
      <artifactId>TAFDependencies</artifactId>
      <version>10.0.1-SNAPSHOT</version>
      <scope>compile</scope>
      <exclusions>
        <exclusion>
          <artifactId>jawin2alpha</artifactId>
          <groupId>Jawin</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.9.1</version>
        <configuration>
          <show>public</show>
          <nohelp>true</nohelp>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
  <distributionManagement>
    <repository>
      <id>development</id>
      <name>TAF Releases</name>
      <url>${aclqaNexusUrl}/repositories/releases</url>
    </repository>
    <snapshotRepository>
      <id>development</id>
      <name>TAF Snapshots</name>
      <url>${aclqaNexusUrl}/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <testDeployServerDir>\\192.168.10.129\Automation\MavenTest</testDeployServerDir>
    <aclqaNexusUrl>http://192.168.10.129:8081/nexus/content</aclqaNexusUrl>
    <testDeployLocalDir>${project.basedir}/src/main/resources/</testDeployLocalDir>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

